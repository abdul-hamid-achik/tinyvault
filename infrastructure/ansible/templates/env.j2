# TinyVault Production Environment
# Generated by Ansible

# App image (from GHCR)
IMAGE=ghcr.io/abdul-hamid-achik/tinyvault:{{ image_tag | default('latest') }}

# Database
DB_PASSWORD={{ db_password }}
POSTGRES_DATA=/mnt/postgres

# Redis
REDIS_DATA=/mnt/data/redis

# Security
ENCRYPTION_KEY={{ encryption_key }}

# Environment
ENV=production
LOG_LEVEL={{ log_level | default('info') }}

# Ports (internal only in prod, Caddy handles external)
APP_PORT=8080
POSTGRES_PORT=5432
REDIS_PORT=6379

# GitHub OAuth (optional)
{% if github_client_id is defined and github_client_id %}
GITHUB_CLIENT_ID={{ github_client_id }}
GITHUB_CLIENT_SECRET={{ github_client_secret }}
GITHUB_CALLBACK_URL=https://{{ domain }}/auth/callback
{% else %}
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=https://{{ domain }}/auth/callback
{% endif %}
