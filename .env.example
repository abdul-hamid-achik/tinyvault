# TinyVault Configuration
# Copy to .env: cp .env.example .env

# Database
# Development (local Docker - SSL not required)
DATABASE_URL=postgres://tinyvault:tinyvault@localhost:5432/tinyvault?sslmode=disable
# Production (use sslmode=require for secure connections)
# DATABASE_URL=postgres://user:password@host:5432/tinyvault?sslmode=require

# Redis
REDIS_URL=redis://localhost:6379/0

# Encryption Key (auto-generated in development)
# For production, generate with: openssl rand -base64 32
# ENCRYPTION_KEY=

# GitHub OAuth (optional - email/password auth works without it)
# Create an OAuth app at: https://github.com/settings/developers
# GITHUB_CLIENT_ID=
# GITHUB_CLIENT_SECRET=
GITHUB_CALLBACK_URL=http://localhost:8080/auth/callback

# Environment
ENV=development
LOG_LEVEL=debug
